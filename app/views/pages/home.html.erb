          <%= link_to cycle_path(cycle), id:"cyclephoto" do %>
          <%= image_tag cycle.photo %>

          <div class="small-card-infos d-flex justify-content-between">
            <h5 class="card-title"><%= cycle.brand %></h5>
            <h5 class="card-text"><%= cycle.category.capitalize %></h5>
            <!-- <h2>Product title!</h2> -->
          </div>
          <div class="d-flex justify-content-end mr-3 mb-2" style="font-size: 18px; font-weight: bolder;">
            <p class="card-text">Â¥<%= cycle.price %></p>
          </div>
        </div>
      </div>
<% end %>
    <% end %>
  </div>
</div>

